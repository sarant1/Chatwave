{
  "name": "ChatWave Infrastructure",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  // "forwardPorts": [3000, 5000],
  // "portsAttributes": {
  //   "3000": {
  //     "label": "Notes Frontend",
  //     "onAutoForward": "notify"
  //   },
  //   "5000": {
  //     "label": "Notes Backend",
  //     "onAutoForward": "notify"
  //   },
  // },
  "customizations": {
    "vscode": {
      "extensions": [
        "42Crunch.vscode-openapi",
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "hashicorp.terraform",
        "redhat.ansible",
        "redhat.vscode-yaml",
        "amazonwebservices.aws-toolkit-vscode",
        "formulahendry.auto-rename-tag",
        "dsznajder.es7-react-js-snippets",
        "ms-vsliveshare.vsliveshare"
      ]
    },
    "settings": {
      "terminal.integrated.profiles.linux": {
        "bash": {
          "path": "/usr/bin/bash",
          "icon": "terminal-bash"
        }
      },
      "terminal.integrated.defaultProfile.linux": "bash"
    }
  },
  "containerEnv": {
    // "AWS_ACCESS_KEY_ID":      "${localEnv:AWS_ACCESS_KEY_ID}",
    // "AWS_ACCOUNT_ID":         "${localEnv:AWS_ACCOUNT_ID}",
    // "AWS_DEFAULT_REGION":     "${localEnv:AWS_DEFAULT_REGION}",
    // "AWS_SECRET_ACCESS_KEY":  "${localEnv:AWS_SECRET_ACCESS_KEY}",
    // "DOCKER_USERNAME":        "${localEnv:DOCKER_USERNAME}",
    // "DOCKER_PASSWORD":        "${localEnv:DOCKER_PASSWORD}",
  },
  "remoteUser": "chatwave",
  "postAttachCommand": "npm i && .devcontainer/postcreate.sh"
}